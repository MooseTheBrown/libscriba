// FlatBuffer IDL file

namespace scriba;

enum EventType: byte
{
    MEETING = 0,
    CALL = 1,
    TASK = 2
}

enum EventState: byte
{
    SCHEDULED = 0,
    COMPLETED = 1,
    CANCELED = 2
}

enum ProjectState:byte
{
    INITIAL = 0,
    CLIENT_INFORMED = 1,
    CLIENT_RESPONSE = 2,
    OFFER = 3,
    REJECTED = 4,
    CONTRACT_SIGNED = 5,
    EXECUTION = 6,
    PAYMENT = 7
}

table Company
{
    id:long;
    name:string;
    jur_name:string;
    address:string;
    inn:string;
    phonenum:string;
    email:string;
}

table Event
{
    id:long;
    descr:string;
    company_id:long;
    project_id:long;
    poc_id:long;
    type:EventType;
    outcome:string;
    timestamp:long;
    state:EventState;
}

table POC
{
    id:long;
    firstname:string;
    secondname:string;
    lastname:string;
    mobilenum:string;
    phonenum:string;
    email:string;
    position:string;
    company_id:long;
}

table Project
{
    id:long;
    title:string;
    descr:string;
    company_id:long;
    state:ProjectState;
}

table Entries
{
    companies:[Company];
    events:[Event];
    people:[POC];
    projects:[Project];
}

root_type Entries;
